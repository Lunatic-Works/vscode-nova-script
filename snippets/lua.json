{
	"box_full": {
		"prefix": "box",
		"body": [
			"box_${1|buttom,full,top|}()",
			"$0"
		],
		"description": "设置对话框位置（三选一）"
	},
	"new_page": {
		"prefix": "new_page",
		"body": [
			"new_page()",
			"$0"
		],
		"description": "清空当前页"
	},
	"set_dialogue_update_mode": {
		"prefix": "set_dialogue_update_mode",
		"body": [
			"set_dialogue_update_mode('${1|append,overwrite|}')",
			"$0"
		],
		"description": "设置对话框更新模式（二选一）"
	},
	"set_dialogue_box_offset": {
		"prefix": "set_dialogue_box_offset",
		"body": [
			"set_dialogue_box_offset(${1:offset_left}, ${2:offset_right}, ${3:offset_top}, ${4:offset_bottom})",
			"$0"
		],
		"description": "设置对话框位置"
	},
	"show": {
		"prefix": "show",
		"body": [
			"show('${1|axue,lexuan|}', '${2|c,l,r|}${3|m,f,n|}')",
			"$0"
		],
		"description": "显示角色"
	},
	"show_xys": {
		"prefix": "show_xys",
		"body": [
			"show_xys('${1|axue,lexuan|}', ${2:x}, ${3:y}, ${4:scale})",
			"$0"
		],
		"description": "在指定坐标、以指定缩放显示角色"
	},
	"hide": {
		"prefix": "hide",
		"body": [
			"hide('${1|axue,lexuan|}')",
			"$0"
		],
		"description": "隐藏角色"
	},
	"move": {
		"prefix": "move",
		"body": [
			"move('${1|axue,lexuan|}', '${2|c,l,r|}${3|m,f,n|}', ${3:start_slope}, ${4:target_slope}, ${5:duration})",
			"$0"
		],
		"description": "移动角色"
	},
	"move_xys": {
		"prefix": "move_xys",
		"body": [
			"move('${1|axue,lexuan|}', ${2:x}, ${3:y}, ${4:scale}, ${5:start_slope}, ${6:target_slope}, ${7:duration})",
			"$0"
		],
		"description": "向指定坐标、指定缩放移动角色"
	},
	"label": {
		"prefix": "label",
		"body": [
			"label('${1:name}', '${2:description}'",
			"$0"
		],
		"description": "定义一个标签"
	},
	"jump_to": {
		"prefix": "jump_to",
		"body": [
			"jump_to('${1:name}')",
			"$0"
		],
		"description": "跳转到指定标签"
	},
	"is_start": {
		"prefix": "is_start",
		"body": [
			"is_start('${1:name}')",
			"$0"
		],
		"description": "将指定标签定义为游戏起点之一"
	},
	"is_default_start": {
		"prefix": "is_default_start",
		"body": [
			"is_default_start('${1:name}')",
			"$0"
		],
		"description": "将指定标签定义为游戏默认起点"
	},
	"is_end": {
		"prefix": "is_end",
		"body": [
			"is_end('${1:name}')",
			"$0"
		],
		"description": "将指定标签定义为游戏结局点"
	},
	"bg": {
		"prefix": "bg",
		"body": [
			"bg('${1:image_name}')",
			"$0"
		],
		"description": "设置背景图"
	},
	"bgm": {
		"prefix": "bgm",
		"body": [
			"bgm('${1:audio_name}')",
			"$0"
		],
		"description": "设置背景音乐"
	},
	"bgm_stop": {
		"prefix": "bgm_stop",
		"body": [
			"bgm_stop()",
			"$0"
		],
		"description": "停止背景音乐"
	},
	"sound": {
		"prefix": "sound",
		"body": [
			"sound('${1:audio_name}', ${2:position}, ${3:volume})",
			"$0"
		],
		"description": "播放声音"
	}
}